@* ContactFormEmail Component *@
@using System.Collections

@model EmailService.EmailModel
<h2>Contact form</h2>
<form asp-action="SendEmail" asp-controller="Email">
    <div class="form-group">
        <label>To</label>
        <input type="text" asp-for="To" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input type="text" asp-for="Subject" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" asp-for="Body"></textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="Send mail"/>
</form>