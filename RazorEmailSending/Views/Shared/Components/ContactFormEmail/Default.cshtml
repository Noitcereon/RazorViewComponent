@* ContactFormEmail Component *@
@model EmailService.EmailModel

<h2>Contact us!</h2>
<form asp-action="Invoke">
    <div class="form-group">
        <label>To</label>
        <input type="text" asp-for="To" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input type="text" asp-for="Subject" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" asp-for="Body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send mail</button>
</form>